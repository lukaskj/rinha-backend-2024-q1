{
  "name": "@lukaskj/typescript-base",
  "version": "2.0",
  "main": "index.js",
  "author": "lukaskj",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist coverage .rollup.cache",
    "prebuild": "npm run clean",
    "build": "npm run clean && node esbuild/build.mjs",
    "build:prod": "npm run lint && npm run build",
    "start": "tsx --watch ./src/index.ts",
    "dev": "tsx --watch ./src/index.ts",
    "format": "prettier --write src/",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.config.js --maxWorkers=1",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "node --inspect=0.0.0.0:5001 -r ts-node/register node_modules/jest/bin/jest.js --runInBand  --config ./jest.config.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@babel/preset-typescript": "^7.23.3",
    "@faker-js/faker": "^8.4.1",
    "@koa/cors": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "cors": "^2.8.5",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukaskj/typescript-base.git"
  },
  "bugs": {
    "url": "https://github.com/lukaskj/typescript-base/issues"
  },
  "homepage": "https://github.com/lukaskj/typescript-base#readme",
  "files": [
    "dist/**/*",
    "!**/test/**"
  ],
  "dependencies": {
    "@koa/multer": "^3.0.2",
    "@koa/router": "^12.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "reflect-metadata": "^0.2.1",
    "routing-controllers": "^0.10.4"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix"
  }
}
